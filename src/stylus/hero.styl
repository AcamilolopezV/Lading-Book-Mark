.hero
  text-align center
  padding 4em 0
  &-image
    max-width 100%
  &-buttons
    padding-top 1em
  @media screen and (min-width :1024px)
    text-align: left
    &-grid
      display: grid
      align-items: center
      grid-template-columns: 530px 1fr
      grid-template-areas: "content image"
    &-image-container
      grid-area: image
      position relative
      top 50px
      text-align center
    &-content
      grid-area: content

    