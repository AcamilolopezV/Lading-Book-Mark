@import './header.styl'
@import './hero.styl'

:root
  --SoftBlue: hsl(231,69%,60%)
  --SoftRed: hsl(0, 94%, 66%)
  --GrayishBlue: hsl(229, 8%, 60%)
  --VeryDarkBlue: hsl(229, 31%,21%)

body
  background: lightgray
  font-family: 'Rubik', sans-serif
  color: var(--VeryDarkBlue)
  margin: 0
  font-size 18px

.u-wrapper
  max-width 1280px
  margin auto
  padding 0 1em